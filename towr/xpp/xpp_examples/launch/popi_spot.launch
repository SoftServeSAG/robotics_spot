<launch>
  
  <!-- visualizes goal, opt. parameters and cartesian base state, endeffector positions and forces -->
  <node name="rviz_marker_node" pkg="xpp_vis" type="rviz_marker_node" output="screen">
  </node>

  <!-- Launch rviz with specific configuration -->
  <node name="rviz_xpp" pkg="rviz" type="rviz"  args="-d $(find xpp_examples)/rviz/xpp_spot.rviz">
  </node>
  
  <!-- Launch spot visualizer -->
  <include file="$(find xpp_spot)/launch/spot.launch"></include>
  
  <!-- Publish robot states from rosbag  --> 
  <node pkg="rosbag" type="play" name="rosbag" args="'$(find xpp_examples)/bags/2020_02_17_spot_first_steps.bag' --loop"/>
  
</launch>
